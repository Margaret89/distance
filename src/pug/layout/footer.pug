					.footer__polit
						a(href="#") Политика конфиденциальности

			.col-md-6
				ul.footer-menu
					-
						var list=[
							{
								text:'О нас',
								sub:[
									'Об автошколе',
									'Наши инструкторы',
									'Отзывы',
									'Новости',
									'Фото и видео',
								]
							},
							{
								text:'Форма обучения',
								sub:[
									'Классическая',
									'Онлайн',
								]
							},
							{
								text:'Категории',
								sub:[
									'C',
									'A',
									'B',
									'D',
								]
							},
							{
								text:'Цены',
								sub:[
									'Спецпредложения',
									'Акции',
									'Цены на категории',
								]
							},
							{
								text:'Прочее',
								sub:[
									'Расписание',
									'FAQ',
									'Контакты',
								]
							},
						]
					each item in list
						li.footer-menu__item
							a(href="#").footer-menu__link= item.text

							if(item.sub)
								ul.footer-menu__sub
									each sub in item.sub
										li.footer-menu__sub-item
											a(href="#").footer-menu__sub-link= sub

			.col-12.d-md-none
				.footer__logo
					a(href="/")
						img(src="assets/img/logo.svg", alt="")

				.footer__copyright © 2021 ООО «Автошкола Дистанция»

				.footer__polit
					a(href="#") Политика конфиденциальности

.scroll-popup.js-scroll-popup
	.scroll-popup__close.js-scroll-popup-close
		+svg('ic-close','ic-close ic-stroke', '15', '15')

	.scroll-popup__title Обучайтесь дома в карантин
	a(data-fancybox='', data-src='#feedback-form', href='javascript:;').scroll-popup__link Оставить заявку


<!-- Форма Обратной связи' -->
#feedback-form.popup-form(style='display: none;')
	form.form-site.js-valid-form(method='get')
		.h3 Оставить заявку

		.form-site__content
			.form-site__item
				input(type='text', placeholder='Ваше имя', required='required')

			.form-site__item
				input.js-phone(type='text', placeholder='Ваш телефон', data-icon='phone', required='required')

		.form-site__polit
			.input-check
				input#check-polit(type='checkbox', checked="")
				label.input-check__label(for='check-polit')
					span.input-check__mark
						+svg('ic-tick','ic-tick ic-stroke', '10', '8')
					span.input-check__text Я согласен на обработку 
						a(href="#") моих персональных данных

		button.btn.btn_border(type='submit')
			span.btn__content Отправить

<!-- Попап об успешной отправки письма -->
#msg-success.success-alert(style='display: none;')
	.success-alert__text Ваше сообщение успешно отправлено!